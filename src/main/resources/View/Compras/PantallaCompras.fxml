<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.Controller.Compras.ComprasController"
            stylesheets="/View/CSS/Style.css">

    <left>
        <VBox spacing="15.0" prefWidth="400.0" style="-fx-background-color: #F4F6F6;">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <Label text="Registro de Compras" textFill="#6F4E37">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>

            <Label text="Proveedor:" styleClass="label-formulario"/>
            <ComboBox fx:id="cmbProveedor" maxWidth="Infinity" promptText="Seleccione Proveedor" styleClass="campo-cafeteria"/>

            <Label text="Ingrediente:" styleClass="label-formulario"/>
            <ComboBox fx:id="cmbIngrediente" maxWidth="Infinity" promptText="Buscar ingrediente..." styleClass="campo-cafeteria"/>

            <HBox spacing="10.0">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Cantidad a comprar:" styleClass="label-formulario"/>
                    <TextField fx:id="txtCantidad" promptText="Ej. 10.5" styleClass="campo-cafeteria" maxWidth="Infinity"/>
                </VBox>
                <VBox alignment="BOTTOM_LEFT">
                    <Label fx:id="lblUnidad" text="unidades" textFill="#7f8c8d"/>
                </VBox>
            </HBox>

            <Button text="Agregar al Pedido â†“" onAction="#agregar" maxWidth="Infinity" styleClass="boton-latte"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <Label text="Resumen del Pedido" textFill="#6F4E37">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>

            <TableView fx:id="tablaDetalle" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colIngrediente" text="Ingrediente" prefWidth="200.0" />
                    <TableColumn fx:id="colCantidad" text="Cant." prefWidth="80.0" />
                    <TableColumn fx:id="colCosto" text="Costo U." prefWidth="80.0" />
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100.0" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label text="TOTAL A PAGAR:" style="-fx-font-weight: bold; -fx-font-size: 16px;" textFill="#4A332A"/>
                <Label fx:id="lblTotalCompra" text="\$0.00" style="-fx-font-weight: bold; -fx-font-size: 18px;" textFill="#C0392B"/>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button text="Limpiar" onAction="#limpiar" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" styleClass="boton-cafeteria" prefWidth="100"/>
                <Button text="Confirmar Compra" onAction="#confirmarCompra" styleClass="boton-latte" style="-fx-background-color: #27AE60;" prefWidth="180"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>