<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.Inventario.InventarioController"
            stylesheets="/View/CSS/Style.css">

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Inventario de Sucursal" textFill="#6F4E37">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <Button onAction="#cargarInventario" text="Actualizar Tabla ⟳" styleClass="boton-cafeteria" prefWidth="150" />
            </HBox>

            <TableView fx:id="tablaInventario" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="100.0" />
                    <TableColumn fx:id="colProducto" text="Producto" prefWidth="250.0" />
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100.0" />
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="80.0" />
                    <TableColumn fx:id="colStock" text="Existencia" prefWidth="100.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colMinimo" text="Mínimo" prefWidth="80.0" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120.0" style="-fx-alignment: CENTER; -fx-font-weight: bold;" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>