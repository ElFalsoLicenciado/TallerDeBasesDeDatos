<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="sidebar"
      alignment="TOP_LEFT"
      pickOnBounds="true"
      prefHeight="600.0"
      prefWidth="80.0"
      minWidth="80.0"
      maxWidth="220.0"
      spacing="15.0"
      style="-fx-background-color: #6F4E37;"
      stylesheets="/View/CSS/Style.css"
      onMouseEntered="#expandirSidebar"
      onMouseExited="#contraerSidebar"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.MainView.SidebarController">

    <padding>
        <Insets top="20.0" left="10.0" right="10.0" bottom="20.0"/>
    </padding>

    <Button fx:id="btnHome" mnemonicParsing="false" onAction="#irAHome"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Inicio">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/home.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

    <Separator opacity="0.3" />

    <Button fx:id="btnVentas" mnemonicParsing="false" onAction="#irAVentas"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Punto de Venta">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/ventas.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="btnCompras" mnemonicParsing="false" onAction="#irACompras"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Compras">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="/View/Images/compras.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="btnProduccion" mnemonicParsing="false" onAction="#irAProduccion"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Cocina / Producción">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/produccion.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="btnInventario" mnemonicParsing="false" onAction="#irAInventario"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Inventario">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/inventario.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="btnRH" mnemonicParsing="false" onAction="#irARH"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   RRHH">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/RRHH.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

    <Region VBox.vgrow="ALWAYS" />

    <Separator opacity="0.3" />
    <Label fx:id="lblUsuario" text="Usuario" textFill="white" wrapText="true" maxWidth="180">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
        <padding>
            <Insets left="10.0" />
        </padding>
    </Label>
    <Separator opacity="0.3" />

    <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#cerrarSesion"
            maxWidth="1.7976931348623157E308"
            prefHeight="50.0"
            styleClass="boton-sidebar"
            text="   Cerrar Sesión">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image> <Image url="/View/Images/logout.png" /> </image>
            </ImageView>
        </graphic>
    </Button>

</VBox>